    "configurations": [
        {
            "name": "debug main",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/output/NES.out",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "externalConsole": false,
            "MIMode": "gdb",
            "preLaunchTask": "setEnv",
            "environment": [{
                "name": "LD_LIBRARY_PATH",
                "value": "./DLLS/gflags:./DLLS/glog:./DLLS/GLFW"
              }],
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "linux": {
                "MIMode": "gdb",
                "miDebuggerPath": "/usr/bin/gdb"
            },
            "osx": {
                "MIMode": "lldb"
            },
            "windows": {
                "MIMode": "gdb",
                "miDebuggerPath": "C:\\MinGw\\bin\\gdb.exe"
            }
        },
